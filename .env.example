# ===== SERVER CONFIG =====
NODE_ENV=production
PORT=3005
HOST=0.0.0.0

# ===== SECURITY =====
JWT_SECRET=your_super_secret_jwt_key_change_this
ENCRYPTION_KEY=your_32_byte_encryption_key_here
SESSION_SECRET=your_session_secret_key

# ===== DATABASE =====
DATABASE_URL=postgres://user:password@localhost:5432/aris_ai
REDIS_URL=redis://localhost:6379

# ===== OPENAI =====
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_ORGANIZATION=org-xxxxxxxxxxxxxxxx

# ===== ANTHROPIC (optional) =====
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===== GOOGLE CLOUD (optional) =====
GOOGLE_CLOUD_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
GOOGLE_CLOUD_PROJECT=your-project-id

# ===== AZURE (optional) =====
AZURE_OPENAI_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# ===== CORS =====
CORS_ORIGIN=https://aris-ai.com,http://localhost:3000
CORS_CREDENTIALS=true

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ===== LOGGING =====
LOG_LEVEL=info
LOG_FILE=/var/log/aris-ai/app.log

# ===== MONITORING =====
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ===== FEATURE FLAGS =====
ENABLE_VOICE=true
ENABLE_CHAT=true
ENABLE_SYSTEM=true
ENABLE_STREAMING=true
