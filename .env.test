# ========================================
# ARIS NEURO v3.0 - Test Environment
# ========================================

# Application
NODE_ENV=test
PORT=3001
HOST=localhost

# Security
JWT_SECRET=test_jwt_secret_key
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d
CORS_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/aris_neuro_test
MONGODB_DB=aris_neuro_test

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# AI Providers (use mock services in test)
OPENAI_API_KEY=test_key
MISTRAL_API_KEY=test_key
ANTHROPIC_API_KEY=test_key

# Voice Processing (disabled in test)
WHISPER_MODEL=base
TTS_MODEL=tts_models/ru/ru_ruslan
PYTHON_PATH=python3

# Monitoring & Logging
LOGGING_LEVEL=error
ENABLE_METRICS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# File Uploads
MAX_FILE_SIZE=5mb
UPLOAD_DIR=./test_uploads

# Cache
CACHE_TTL=60
CACHE_PREFIX=aris_test_

# Email
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
ENABLE_EMAIL=false

# Features
ENABLE_VOICE_PROCESSING=false
ENABLE_AI_CHAT=false
ENABLE_MEMORY_STORAGE=false
ENABLE_FILE_UPLOADS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false

# Frontend URL
FRONTEND_URL=http://localhost:5173