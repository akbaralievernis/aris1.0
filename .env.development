# ========================================
# ARIS NEURO v3.0 - Development Environment
# ========================================

# Application
NODE_ENV=development
PORT=3000
HOST=localhost

# Security
JWT_SECRET=your_development_jwt_secret_key_change_this
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d
CORS_ORIGIN=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Database
MONGODB_URI=mongodb://localhost:27017/aris_neuro_dev
MONGODB_DB=aris_neuro_dev

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# AI Providers
OPENAI_API_KEY=your_openai_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Voice Processing
WHISPER_MODEL=base
TTS_MODEL=tts_models/ru/ru_ruslan
PYTHON_PATH=python3

# Monitoring & Logging
LOGGING_LEVEL=debug
ENABLE_METRICS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT=1000

# File Uploads
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Cache
CACHE_TTL=600
CACHE_PREFIX=aris_dev_

# Email (optional, for development use MailHog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
ENABLE_EMAIL=false

# Features
ENABLE_VOICE_PROCESSING=true
ENABLE_AI_CHAT=true
ENABLE_MEMORY_STORAGE=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_NOTIFICATIONS=false

# Frontend URL for email links
FRONTEND_URL=http://localhost:5173